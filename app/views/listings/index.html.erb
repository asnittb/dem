<h1>Listing listings</h1>

<div class ="center">
<div class="row">
  <% @listings.each do |listing| %>
<div class="col-md-3">
    <div class="thumbnail">
  <%= link_to image_tag(listing.image.url(:thumb)), listing %>
      <div class="caption">
        <h3><%= listing.name %></h3>
        <p><%= number_to_currency listing.price %></p>
        <p><%= "Sold by #{listing.user.name}" %></p>
     <%= link_to 'Edit', edit_listing_path(listing) %> 
  <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %>

    </div>
 </div>
</div>

<% end %>
 
</div>
</div>
   <%= link_to 'New Listing', new_listing_path, class:"btn btn-link" %>


